                </div>
                <div class="col-md-4 mb-3">
                    {{ form_row(formulaireForm.etreBts) }}
                </div>
                <div class="col-md-8 mb-6">
                    {{ form_row(formulaireForm.contactEntreprise) }}
                </div>
                <div class="col-md-4 mb-3">
                    {{ form_row(formulaireForm.agreeTerms) }}
                </div>
            </div>
            {{ form_row(formulaireForm.submit) }}
            {{ form_end(formulaireForm) }}


        </form>
    </div>
</section>