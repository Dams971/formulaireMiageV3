                <div class="col-md-4 mb-3">
                    {{ form_row(formulaireForm.adresseDesParents) }}
                </div>

                <div class="col-md-4 mb-3">
                    {{ form_row(formulaireForm.premierAnnee) }}
                </div>
                <div class="col-md-4 mb-3">
                    {{ form_row(formulaireForm.deuxiemeAnnee) }}
                </div>
                <div class="col-md-4 mb-3">
